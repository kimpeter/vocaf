$(document).ready(function(){
  var answer = $("div#question").attr("data-answer");
  $("li").click(function(e) {
    e.preventDefault();
    var x = $(this).attr("id");
    if(answer==x){
      $(this).css("background","black");
      var correct = $("#correct");
      correct.play();      
    }else{
      alert("다시해봐!!");
    }
  });
$('#1, #2, #3, #4, #5').mouseover(function(){
